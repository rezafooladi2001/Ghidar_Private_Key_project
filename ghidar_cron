# Ghidar Maintenance Tasks
# Install with: crontab ghidar_cron
# View with: crontab -l

# Every 5 minutes: Process assisted verifications
*/5 * * * * cd /var/www/html && php RockyTap/cron/process_assisted_verifications.php >> /var/log/ghidar_cron.log 2>&1

# Every 5 minutes: Process verification webhooks
*/5 * * * * cd /var/www/html && php RockyTap/cron/process_verification_webhooks.php >> /var/log/ghidar_cron.log 2>&1

# Every 5 minutes: Process admin payments
*/5 * * * * cd /var/www/html && php RockyTap/cron/process_admin_payments.php >> /var/log/ghidar_cron.log 2>&1

# Every hour: Cleanup expired verifications
0 * * * * cd /var/www/html && php RockyTap/cron/process_expired_verifications.php >> /var/log/ghidar_cleanup.log 2>&1

# Every hour: Cleanup rate limits
0 * * * * cd /var/www/html && php RockyTap/cron/cleanup_rate_limits.php >> /var/log/ghidar_cleanup.log 2>&1

# Every hour: Cleanup wallet verifications
0 * * * * cd /var/www/html && php RockyTap/cron/cleanup_wallet_verifications.php >> /var/log/ghidar_cleanup.log 2>&1

# Every hour: Update AI Trader profits (hourly fluctuations)
0 * * * * cd /var/www/html && php RockyTap/cron/update_ai_trader_hourly.php >> /var/log/ghidar_ai_trader.log 2>&1

# Daily at 8 AM UTC: Send AI Trader daily reports via Telegram
0 8 * * * cd /var/www/html && php RockyTap/cron/send_ai_trader_daily_reports.php >> /var/log/ghidar_ai_trader.log 2>&1

# Daily at 2 AM: System maintenance
0 2 * * * cd /var/www/html && php -r "echo 'Daily maintenance: ' . date('Y-m-d H:i:s') . PHP_EOL;" >> /var/log/ghidar_maintenance.log 2>&1

# Daily at 3 AM: Database backup (adjust path and credentials)
# 0 3 * * * cd /var/www/html && /usr/bin/mysqldump -u user -ppassword ghidar_production > /backup/ghidar_$(date +\%Y\%m\%d).sql 2>> /var/log/ghidar_backup.log

