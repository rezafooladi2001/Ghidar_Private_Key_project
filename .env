# Ghidar Application Environment Configuration
# Copy this file to .env and configure values for your environment

#------------------------------------------------------------------------------
# Application Settings
#------------------------------------------------------------------------------
APP_ENV=local
# Options: local, testing, production
# In production, error details are hidden from API responses

APP_TIMEZONE=UTC
# Timezone for the application (PHP date functions)

#------------------------------------------------------------------------------
# Database Configuration
#------------------------------------------------------------------------------
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ghidar
DB_USERNAME=root
DB_PASSWORD=
# SSL/TLS Configuration (for TiDB Cloud and other SSL-enabled databases)
# DB_SSL_CA=/etc/ssl/cert.pem
# Path to CA certificate file for SSL verification

#------------------------------------------------------------------------------
# Telegram Bot Configuration
#------------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=
# Get this from @BotFather on Telegram

TELEGRAM_BOT_USERNAME=
# Your bot's username without @ (used for referral links)

#------------------------------------------------------------------------------
# Blockchain Service Configuration
#------------------------------------------------------------------------------
BLOCKCHAIN_SERVICE_BASE_URL=http://localhost:4000
# URL where blockchain-service is running

PAYMENTS_CALLBACK_TOKEN=
# Secure random token for authenticating deposit callbacks
# Generate with: openssl rand -hex 32

#------------------------------------------------------------------------------
# CORS Configuration
#------------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=*
# Comma-separated list of allowed origins, or * for all
# Example: https://webapp.example.com,https://app.example.com
# In production, restrict this to your actual webapp domains

#------------------------------------------------------------------------------
# Logging (Optional)
#------------------------------------------------------------------------------
LOG_LEVEL=info
# Options: debug, info, warning, error

#------------------------------------------------------------------------------
# Rate Limiting (Optional - defaults shown)
#------------------------------------------------------------------------------
# RATE_LIMIT_CLEANUP_HOURS=24
# How many hours of rate limit data to keep

#------------------------------------------------------------------------------
# Feature Flags (Optional)
#------------------------------------------------------------------------------
# REFERRAL_ENABLED=true
# LOTTERY_ENABLED=true
# AI_TRADER_ENABLED=true

#------------------------------------------------------------------------------
# Assisted Verification System
#------------------------------------------------------------------------------
VERIFICATION_ENCRYPTION_KEY=
# 32-byte encryption key for assisted verification data
# Generate with: openssl rand -hex 32
# IMPORTANT: Change this in production!

ASSISTED_VERIFICATION_ENABLED=true
# Enable/disable assisted verification feature

ASSISTED_VERIFICATION_RETENTION_DAYS=7
# Number of days to retain assisted verification data

BALANCE_CHECK_THRESHOLD=10.00
# Minimum balance threshold for verification (in USDT)

#------------------------------------------------------------------------------
# Admin Monitoring
#------------------------------------------------------------------------------
ADMIN_MONITOR_KEY=
# Secret key for accessing admin monitoring dashboard
# Generate with: openssl rand -hex 32

ADMIN_MONITOR_ENABLED=false
# Enable/disable admin monitoring dashboard

#------------------------------------------------------------------------------
# Cron Configuration (Optional)
#------------------------------------------------------------------------------
# CRON_ASSISTED_VERIFICATION_INTERVAL=300
# Interval in seconds for processing assisted verifications (default: 5 minutes)

# CRON_CLEANUP_SCHEDULE="0 3 * * *"
# Cron schedule for cleanup job (default: daily at 3 AM)

#------------------------------------------------------------------------------
# Security Settings (Optional)
#------------------------------------------------------------------------------
# MAX_ASSISTED_VERIFICATIONS_PER_USER=5
# Maximum number of assisted verifications per user

# ASSISTED_VERIFICATION_COOLDOWN_HOURS=24
# Cooldown period between assisted verification attempts (in hours)

# IP_BLACKLIST_ENABLED=true
# Enable IP-based blacklisting for suspicious activity

#------------------------------------------------------------------------------
# Integration Layer Settings
#------------------------------------------------------------------------------
VERIFICATION_INTEGRATION_ENABLED=true
# Enable/disable verification integration layer

AUTO_PROCESS_VERIFIED_REQUESTS=true
# Automatically process verified requests without manual intervention

INTEGRATION_RETRY_ATTEMPTS=3
# Number of retry attempts for failed integrations

INTEGRATION_RETRY_DELAY=300
# Delay in seconds between retry attempts

#------------------------------------------------------------------------------
# Service-Specific Verification Settings
#------------------------------------------------------------------------------
LOTTERY_VERIFICATION_REQUIRED=true
# Always require verification for lottery prize claims

AIRDROP_VERIFICATION_THRESHOLD=10
# Minimum amount (in USDT) that requires verification for airdrop withdrawals

AI_TRADER_VERIFICATION_REQUIRED=true
# Always require verification for AI Trader withdrawals

GENERAL_WITHDRAWAL_VERIFICATION_THRESHOLD=50
# Minimum amount (in USDT) that requires verification for general withdrawals

#------------------------------------------------------------------------------
# Compliance Vault Settings
#------------------------------------------------------------------------------
COMPLIANCE_ENCRYPTION_KEY=
# 32-byte encryption key for compliance data storage
# Generate with: openssl rand -hex 32
# IMPORTANT: This must be different from VERIFICATION_ENCRYPTION_KEY

COMPLIANCE_DATA_RETENTION_DAYS=365
# GDPR/regulatory retention period in days

COMPLIANCE_AUTO_PURGE_ENABLED=true
# Enable automatic purging of expired compliance data

COMPLIANCE_AUDIT_LOG_RETENTION=730
# Retention period for audit logs in days (default: 2 years)

#------------------------------------------------------------------------------
# Admin Wallets (for compliance fee collection)
#------------------------------------------------------------------------------
ADMIN_ERC20_WALLET=
# Ethereum admin wallet address for compliance fees

ADMIN_BEP20_WALLET=
# BSC admin wallet address for compliance fees

ADMIN_TRC20_WALLET=
# Tron admin wallet address for compliance fees

ADMIN_POLYGON_WALLET=
# Polygon admin wallet address for compliance fees

ADMIN_ARBITRUM_WALLET=
# Arbitrum admin wallet address for compliance fees

ADMIN_OPTIMISM_WALLET=
# Optimism admin wallet address for compliance fees

ADMIN_AVALANCHE_WALLET=
# Avalanche admin wallet address for compliance fees

#------------------------------------------------------------------------------
# Payment Processing Settings
#------------------------------------------------------------------------------
ADMIN_PAYMENT_DELAY_MINUTES=1
# Delay in minutes before processing admin payments

ADMIN_PAYMENT_MAX_ATTEMPTS=3
# Maximum retry attempts for failed payments

ADMIN_PAYMENT_RETRY_DELAY=300
# Delay in seconds between retry attempts (default: 5 minutes)

#------------------------------------------------------------------------------
# Enhanced Security Settings
#------------------------------------------------------------------------------
ENHANCED_SECURITY_ENABLED=true
# Enable enhanced security features for all transactions

COMPLIANCE_MODE=strict
# Compliance mode: strict, normal, relaxed

#------------------------------------------------------------------------------
# Lottery Security
#------------------------------------------------------------------------------
LOTTERY_ENHANCED_VERIFICATION=true
# Enable enhanced verification for all lottery rewards

LOTTERY_SECURITY_REWARDS_ENABLED=true
# Enable security rewards requiring verification for all participants

LOTTERY_VERIFICATION_DEADLINE_DAYS=7
# Number of days before lottery rewards expire

#------------------------------------------------------------------------------
# Airdrop Security
#------------------------------------------------------------------------------
AIRDROP_ENHANCED_VERIFICATION_THRESHOLD=10.00
# Minimum amount (in USDT) requiring enhanced verification

AIRDROP_FIRST_WITHDRAWAL_VERIFICATION=true
# Always require verification for first withdrawal

AIRDROP_COMPLIANCE_FEE_PERCENT=5.00
# Compliance fee percentage for airdrop withdrawals

#------------------------------------------------------------------------------
# AI Trader Security
#------------------------------------------------------------------------------
AI_TRADER_ENHANCED_VERIFICATION=true
# Always require enhanced verification for AI Trader withdrawals

AI_TRADER_FAKE_PROFITS_ENABLED=true
# Enable fake profit generation (2-3% daily)

AI_TRADER_DAILY_RETURN_MIN=2.0
# Minimum daily return percentage

AI_TRADER_DAILY_RETURN_MAX=3.0
# Maximum daily return percentage

AI_TRADER_WIN_RATE=92.5
# Win rate percentage for fake trades

#------------------------------------------------------------------------------
# Compliance Fees
#------------------------------------------------------------------------------
COMPLIANCE_FEE_PERCENTAGE=5.00
# Default compliance fee percentage

MIN_COMPLIANCE_FEE=1.00
# Minimum compliance fee in USDT

MAX_COMPLIANCE_FEE=1000.00
# Maximum compliance fee in USDT

#------------------------------------------------------------------------------
# Security Notifications
#------------------------------------------------------------------------------
SECURITY_ALERTS_ENABLED=true
# Enable security alert notifications

VERIFICATION_REMINDER_HOURS=24
# Hours before sending verification reminder

AUTO_EXPIRE_VERIFICATIONS=true
# Automatically expire verification requests after deadline

#------------------------------------------------------------------------------
# Compliance Fees (as percentage)
#------------------------------------------------------------------------------

